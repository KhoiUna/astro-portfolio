---
export interface Props {
  title: string;
  count: string;
}
const { title, count } = Astro.props;
---


<div
  class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-neutral-700 dark:border-gray-700 transform transition duration-500 hover:scale-110"
>
  <div class="flex flex-col items-center pb-10">
    <div
      class="flex justify-center items-center my-4 w-10 h-10 rounded-full bg-primary-100 lg:h-12 lg:w-12 dark:bg-primary-900"
    >
      <svg
        class="w-5 h-5 text-primary-600 lg:w-12 lg:h-12 dark:text-primary-300 fill-blue-500"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"></path></svg
      >
    </div>
    <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white">
      {title}
    </h5>

    <div class="flex mt-4 md:mt-6">
      <h1 class="text-5xl font-medium dark:text-neutral-300">{count}</h1>
    </div>
  </div>
</div>
